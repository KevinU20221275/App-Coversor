<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad:"
        android:padding="8dp" />

    <EditText
        android:id="@+id/txtCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="Ingresa la cantidad"
        android:minHeight="48dp"
        android:padding="8dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCantidad"
        android:layout_alignParentStart="true"
        android:text="Tipo de Conversión:"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/listaConversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown"
        android:minHeight="48dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listaConversion"
        android:layout_alignParentStart="true"
        android:text="Calcular Conversión"
        android:minHeight="48dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/lblResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="[RESULTADOS]"
        android:padding="8dp" />
    
</RelativeLayout>